# Resume Maker Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# Database Configuration (Vercel Postgres)
# =============================================================================
# POSTGRES_URL is automatically set by Vercel when you link a Postgres database
# For local development, you can use a Neon or other PostgreSQL connection string
# POSTGRES_URL="postgresql://user:password@host:5432/database?sslmode=require"

# =============================================================================
# AI Provider Configuration
# =============================================================================
# Supported providers: "anthropic" | "openai"
AI_PROVIDER="anthropic"

# Anthropic API Key (required if AI_PROVIDER=anthropic)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# OpenAI API Key (required if AI_PROVIDER=openai)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# =============================================================================
# AI Model Configuration
# =============================================================================
# Available models:
# Anthropic: claude-sonnet-4-5-20250929, claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022, claude-3-opus-20240229
# OpenAI: gpt-4-turbo, gpt-4o, gpt-3.5-turbo
AI_MODEL="claude-sonnet-4-5-20250929"

# Model temperature (0-2, lower = more deterministic, higher = more creative)
AI_TEMPERATURE="0.7"

# Maximum tokens for AI responses
AI_MAX_TOKENS="4000"

# Request timeout in milliseconds (default: 60000 = 60 seconds)
AI_TIMEOUT="60000"

# =============================================================================
# AI Feature Flags
# =============================================================================
# Enable/disable specific AI features (set to "false" to disable)
ENABLE_AI_TAILORING="true"
ENABLE_AI_SUMMARY="true"
ENABLE_AI_SKILL_EXTRACTION="true"
ENABLE_AI_BULLET_OPTIMIZATION="true"
ENABLE_AI_JOB_MATCH="true"

# =============================================================================
# LinkedIn Job Scraping (Apify)
# =============================================================================
# Apify API key for LinkedIn job scraping
# Get your key at: https://console.apify.com/account/integrations
APIFY_API_KEY=""

# =============================================================================
# Application Configuration
# =============================================================================
# Next.js environment
NODE_ENV="development"

# Application URL (used for redirects, webhooks, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
